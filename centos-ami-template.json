{
    "variables": {
        "aws_region": "",
        "source_ami": "ami-9887c6e7",
        "ssh_username":"centos"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "communicator": "ssh",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "centOS AMI for CSYE 6225 - Spring 2019",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sdm",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "FOO=foo"
            ],
            "inline": [
                "sudo yum update -y",
                "sudo yum install ruby -y",
                "sudo yum install wget -y",
                "sudo yum install java-1.8.0-openjdk-devel -y",
                "sudo groupadd tomcat",
                "sudo useradd -M -s /bin/nologin -g tomcat -d /opt/tomcat tomcat",
                "cd",
                "sudo wget https://www-eu.apache.org/dist/tomcat/tomcat-8/v8.5.37/bin/apache-tomcat-8.5.37.tar.gz",
                "sudo mkdir /opt/tomcat",
                "sudo tar xvf apache-tomcat-8*tar.gz -C /opt/tomcat --strip-components=1",
                "cd /opt/tomcat",
                "sudo chgrp -R tomcat /opt/tomcat",
                "sudo chmod -R g+r conf",
                "sudo chmod g+x conf",
                "sudo chown -R tomcat webapps/ work/ temp/ logs/",
                "cd /etc/systemd/system",
                "sudo touch tomcat.service",
                "echo '[Unit]' | sudo tee tomcat.service",
                "echo 'Description=Apache Tomcat Web Application Container' | sudo tee --append tomcat.service",
                "echo 'After=syslog.target network.target' | sudo tee --append tomcat.service",
                "echo '[Service]' | sudo tee --append tomcat.service",
                "echo 'Type=forking' | sudo tee --append tomcat.service",
                "echo 'Environment=JAVA_HOME=/usr/lib/jvm/jre' | sudo tee --append tomcat.service",
                "echo 'Environment=CATALINA_PID=/opt/tomcat/temp/tomcat.pid' | sudo tee --append tomcat.service",
                "echo 'Environment=CATALINA_HOME=/opt/tomcat' | sudo tee --append tomcat.service",
                "echo 'Environment=CATALINA_BASE=/opt/tomcat' | sudo tee --append tomcat.service",
                "echo 'Environment=\"CATALINA_OPTS=-Xms512M -Xmx1024M -server -XX:+UseParallelGC\"' | sudo tee --append tomcat.service",
                "echo 'Environment=\"JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom\"' | sudo tee --append tomcat.service",
                "echo 'ExecStart=/opt/tomcat/bin/startup.sh' | sudo tee --append tomcat.service",
                "echo 'ExecStop=/bin/kill -15 $MAINPID' | sudo tee --append tomcat.service",
                "echo 'User=tomcat' | sudo tee --append tomcat.service",
                "echo 'Group=tomcat' | sudo tee --append tomcat.service",
                "echo 'UMask=0007' | sudo tee --append tomcat.service",
                "echo 'RestartSec=10' | sudo tee --append tomcat.service",
                "echo 'Restart=always' | sudo tee --append tomcat.service",
                "echo '[Install]' | sudo tee --append tomcat.service",
                "echo 'WantedBy=multi-user.target' | sudo tee --append tomcat.service",
                "sudo systemctl daemon-reload",
                "sudo systemctl start tomcat",
                "sudo systemctl enable tomcat",
                "cd",
                "cd /home/centos",
                "wget https://aws-codedeploy-us-east-1.s3.amazonaws.com/latest/install",
                "chmod +x ./install",
                "sudo ./install auto"
            ]
        }
    ]
}
